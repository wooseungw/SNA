{{>layouts/header}}

{{#article}}
<form class="container" action="/articles/update" method="post">
    <input type="hidden" name="id" value={{id}}>
    <div class="mb-3"> <!--Set margin bottom to 3-->
        <label class="form-label">제목</label>
        <input class="form-control" name="title" value="{{title}}">
    </div>
    <div class="mb-3">
        <label class="form-label">내용</label>
        <textarea class="form-control" name="content">{{content}}</textarea>
    </div>
    <button type="submit" class="btn btn-primary">Submit</button>

</form>
{{/article}}
<br>
<a href="/articles/{{article.id}}" class="btn btn-primary">Back</a>
<a href="/articles" class="btn btn-primary">목록 페이지</a>

{{>layouts/footer}}